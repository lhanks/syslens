{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Syslens",
  "windows": ["main", "sidebar-float"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "core:webview:allow-create-webview-window",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$APPCONFIG/**" },
        { "path": "$CACHE/**" }
      ]
    }
  ]
}
