{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Syslens",
  "version": "0.0.2",
  "identifier": "com.syslens.desktop",
  "build": {
    "beforeBuildCommand": "npm --prefix ./ui run build",
    "beforeDevCommand": "npm --prefix ./ui run start",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../ui/dist/syslens-ui/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Syslens",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-inline'; connect-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com",
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "shortDescription": "Desktop system information dashboard",
    "longDescription": "Syslens is a modern desktop application that provides comprehensive system information, real-time monitoring, and hardware details for Windows systems.",
    "copyright": "Copyright 2025 Syslens",
    "category": "Utility",
    "publisher": "Syslens",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["English"],
        "compression": "lzma"
      },
      "wix": {
        "language": "en-US",
        "upgradeCode": null
      }
    }
  }
}
