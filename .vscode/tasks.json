{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tauri Dev",
      "type": "shell",
      "command": "cargo tauri dev",
      "options": { "cwd": "${workspaceFolder}/projects/backend" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$rustc", "$tsc"]
    },
    {
      "label": "Build UI",
      "type": "npm",
      "script": "build",
      "path": "projects/ui",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Backend",
      "type": "shell",
      "command": "cargo build --release",
      "options": { "cwd": "${workspaceFolder}/projects/backend" },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Test Rust",
      "type": "shell",
      "command": "cargo test",
      "options": { "cwd": "${workspaceFolder}/projects/backend" },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Test Angular",
      "type": "npm",
      "script": "test",
      "path": "projects/ui",
      "problemMatcher": []
    },
    {
      "label": "Lint Frontend",
      "type": "npm",
      "script": "lint",
      "path": "projects/ui",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint Backend",
      "type": "shell",
      "command": "cargo clippy -- -D warnings",
      "options": { "cwd": "${workspaceFolder}/projects/backend" },
      "problemMatcher": ["$rustc"]
    }
  ]
}
