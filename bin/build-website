#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
WEBSITE_DIR="$PROJECT_ROOT/projects/website"

echo "Building marketing website..."

cd "$WEBSITE_DIR"

if [[ ! -d "node_modules" ]]; then
    echo "Installing dependencies..."
    npm install
fi

npm run build

echo ""
echo "Website build complete!"
echo "Output: projects/website/.next/"
